<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/topContainer">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editBtn"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit_main"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_below="@+id/topContainer"
        android:layout_width="344dp"
        android:layout_centerHorizontal="true"
        android:layout_height="266dp"
        android:background="@drawable/custom_container"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircularImageView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/placeholder_profile_blank" />

        <TextView
            android:id="@+id/nameTv"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="John Doe"
            android:textAlignment="center"
            android:textColor="@color/gray_100"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/emailTv"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingMultiplier="1.0"
            android:text="johndoe@example.com"
            android:textAlignment="center"
            android:textColor="@color/gray_100"
            android:textSize="14sp" />


    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/infoBtn"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/container"
        android:background="@drawable/custom_container">

        <ImageView
            android:id="@+id/info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/info_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/info"
            android:fontFamily="@font/poppins_semibold"
            android:text="About Us"
            android:textColor="@color/broken_white"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/logoutBtn"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/infoBtn"
        android:background="@drawable/custom_container">

        <ImageView
            android:id="@+id/logout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/logout_red"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/logout"
            android:fontFamily="@font/poppins_semibold"
            android:text="Logout"
            android:textColor="#FF5B5B"/>

    </RelativeLayout>
</RelativeLayout>
