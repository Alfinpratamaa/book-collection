<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".MainActivity">

    <!-- FrameLayout for main content -->
    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/wrapperBA">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"/>
    </ScrollView>


    <!-- BottomAppBar -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/wrapperBA"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="140dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            app:layout_anchor="@id/bottomAppBar"
            android:layout_gravity="top|center"
            android:layout_marginTop="30dp"
            android:translationZ="10dp"
            android:src="@drawable/add_gray"
            android:backgroundTint="#FFFF9C01"
            app:maxImageSize="40dp" />


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:backgroundTint="@color/black_100"
        app:fabAlignmentModeEndMargin="0dp"
        app:fabCradleMargin="10dp"
        app:fabAnchorMode="cradle"
        app:fabCradleRoundedCornerRadius="50dp"
        app:fabAlignmentMode="center"
        app:fabAnimationMode="slide"
        app:fabCradleVerticalOffset="12dp"
        >

        <!-- BottomNavigationView -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_100"
            app:itemIconTint="@color/white"
            app:itemRippleColor="@color/white"
            app:itemTextColor="@color/white"
            app:layout_anchor="@+id/bottomAppBar"
            app:layout_anchorGravity="center"
            app:menu="@menu/menu_main"
            app:tint="@color/white"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.bottomappbar.BottomAppBar>





    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- FloatingActionButton -->


</RelativeLayout>